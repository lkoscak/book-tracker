@model IEnumerable<book_tracker.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Most recently read books</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-6">
                    <div class="col-md-6">
                        <h4>@book.Title</h4>
                        <p>@book.Description</p>
                        <a asp-action="Edit" asp-route-id="@book.BookID" class="btn btn-primary">Edit book</a>
                    </div>
                    <div class="col-md-6">
                        <img src="@book.ImageURL">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
